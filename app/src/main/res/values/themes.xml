<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SingleImageStoreWithFirebaseDatabase" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="craftImageView">
        <item name="android:layout_width">230dp</item>
        <item name="android:layout_height">180dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:src">@drawable/image_placeholder</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:background">@color/purple_200</item>
    </style>

    <style name="craftSaveButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:backgroundTint">@color/teal_700</item>
        <item name="android:text">@string/save</item>
    </style>


</resources>